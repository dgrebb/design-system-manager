{
  "name": "@theme-lab/components",
  "version": "0.0.1",
  "private": true,
  "description": "Web Components for Theme Lab",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build:ts && bun run build:styles",
    "build:ts": "tsc --project tsconfig.build.json",
    "build:styles": "bun run src/build-styles.ts",
    "dev": "tsc --watch",
    "test": "bun test"
  },
  "dependencies": {
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@theme-lab/tokens": "workspace:*",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0"
  }
}
