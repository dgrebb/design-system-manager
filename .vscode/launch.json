{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Storybook",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:6006",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "name": "Debug Hub",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:6010",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "name": "Debug Token Generator",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["run", "${workspaceFolder}/packages/tokens/src/generate.ts"],
      "cwd": "${workspaceFolder}/packages/tokens",
      "console": "integratedTerminal"
    }
  ]
}
